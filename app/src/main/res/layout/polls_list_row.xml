<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:elevation="3dp"
        app:cardCornerRadius="100dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/card_relative_single"
            >

            <TextView
                android:id="@+id/question_single"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:text="@string/question" />

            <RadioGroup
                android:id="@+id/r_group_single"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:layout_below="@id/question_single">
                <RadioButton android:id="@+id/ch1_single"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/ch1_vote_single"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_below="@id/ch1_single"
                    android:paddingLeft="40dp"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="15sp"
                    android:visibility="invisible"
                    />
                <RadioButton android:id="@+id/ch2_single"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                 />
                <TextView
                    android:id="@+id/ch2_vote_single"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_below="@id/ch1_single"
                    android:paddingLeft="40dp"
                    android:visibility="invisible"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="15sp"
                    />
                <RadioButton android:id="@+id/ch3_single"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                  />
                <TextView
                    android:id="@+id/ch3_vote_single"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_below="@id/ch3_single"
                    android:paddingLeft="40dp"
                    android:visibility="invisible"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="15sp"
                    />
                <RadioButton android:id="@+id/ch4_single"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   />
                <TextView
                    android:id="@+id/ch4_vote_single"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_below="@id/ch4_single"
                    android:paddingLeft="40dp"
                    android:visibility="invisible"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="15sp"
                    />
            </RadioGroup>
            <ImageButton
                android:id="@+id/refresh_polling"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/r_group_single"
                android:layout_alignParentRight="true"
                android:background="@android:color/white"
                android:src="@drawable/ic_refresh_black_24dp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>